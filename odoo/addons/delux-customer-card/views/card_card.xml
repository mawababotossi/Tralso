<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_card_tree" model="ir.ui.view">
            <field name="name">card.card.tree</field>
            <field name="model">card.card</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Card">
                    <field name="card_code" />
                    <field name="card_type" />
                    <field name="card_owner" />
                    <field name="card_issue_date" />
                    <field name="card_expiry_date" />
                    <field name="card_value" />
                    <field name="card_status" />
                </tree>
            </field>
        </record>
        <record id="view_card_form" model="ir.ui.view">
            <field name="name">card.card.form</field>
            <field name="model">card.card</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Card">
                    <sheet>
                       <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;"><field name="card_code" required="1" placeholder="Code" /></td>
                                        <td style="padding-right:10px;"><field name="card_type" placeholder="Card Type" required="1"/></td>
                                        <td style="padding-right:10px;"><field name="card_value" placeholder="Value" required="1"/></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="Card details"
                                string="Détails de la carte">
                                <group col="4" colspan="4"
                                    name="card_detail">
                                    <field name="card_issue_date" />
                                    <field name="card_expiry_date" />
                                    <field name="card_owner" disabled="disabled"/>
                                    <field name="card_status" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_cards">
            <field name="name">Liste des cartes prépayées</field>
            <field name="res_model">card.card</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new card
                </p>
            </field>
        </record>
        <menuitem id="menu_card" name="Cartes prépayées"/>
        <menuitem id="delux_card" name="Cartes prépayées" parent="menu_card"
                  action="action_view_cards"/>
    </data>
</odoo>
